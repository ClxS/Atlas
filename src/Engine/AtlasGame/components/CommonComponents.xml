<Components>
    <NameTag>
        <Name Type="FixedString<32>" Mode="EditorOnly" />
    </NameTag>
    <Attachment>
        <EntityId Type="EntityId" />
    </Attachment>
    <TransformPrivate Private="True">
        <Transform Type="Matrix4f" />
    </TransformPrivate>
    <Transform Requires="Attachment;TransformPrivate">
        <Position Type="Vector3f" />
        <Scale Type="Vector3f" Default="1.0f, 1.0f, 1.0f" />
        <Orientation Type="Quaternionf" Default="Eigen::Quaternionf::Identity()" />
    </Transform>

</Components>
